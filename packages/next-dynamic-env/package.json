{
  "name": "next-dynamic-env",
  "version": "0.1.0",
  "description": "Runtime environment variables for dockerized Next.js apps",
  "author": "Rees Morris",
  "license": "MIT",
  "keywords": [
    "docker",
    "env",
    "environment",
    "next",
    "nextjs",
    "runtime",
    "variables"
  ],
  "repository": "https://github.com/reesmorris/next-dynamic-env",
  "homepage": "https://github.com/reesmorris/next-dynamic-env#readme",
  "bugs": "https://github.com/reesmorris/next-dynamic-env/issues",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "check": "bun run lint && bun run typecheck",
    "dev": "tsup --watch",
    "format": "biome format --write .",
    "lint": "biome check --fix .",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "next": "15.4.6",
    "react": "19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24",
    "@types/react": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "next": "15.4.6",
    "react": "19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
