  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^24",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "syncpack": "^14.0.0-alpha.19",
    "turbo": "^2.5.6",
    "typescript": "^5"
