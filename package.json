{
  "name": "next-public-env",
  "version": "0.1.0",
  "description": "Runtime environment variables for dockerized Next.js apps",
  "author": "Rees Morris",
  "license": "MIT",
  "keywords": [
    "docker",
    "env",
    "environment",
    "next",
    "nextjs",
    "runtime",
    "variables"
  ],
  "repository": "https://github.com/reesmorris/next-public-env",
  "homepage": "https://github.com/reesmorris/next-public-env#readme",
  "bugs": "https://github.com/reesmorris/next-public-env/issues",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "check": "bun run lint && bun run typecheck",
    "dev": "tsup --watch",
    "format": "biome format --write .",
    "lint": "biome check --fix .",
    "prepare": "husky",
    "prepublishOnly": "pnpm build",
    "syncpack:fix": "syncpack fix",
    "syncpack:format": "syncpack format",
    "syncpack:lint": "syncpack lint",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "biome check --fix --no-errors-on-unmatched"
    ]
  },
  "peerDependencies": {
    "next": "^14.1.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "next": "^14.1.0",
    "react": "^18.2.0",
    "syncpack": "^14.0.0-alpha.19",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
