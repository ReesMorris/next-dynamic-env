{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter=next-dynamic-env",
    "check": "turbo check",
    "dev": "turbo dev",
    "format": "turbo format",
    "lint": "turbo lint",
    "prepare": "husky",
    "syncpack:fix": "syncpack fix",
    "syncpack:format": "syncpack format",
    "syncpack:lint": "syncpack lint",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
